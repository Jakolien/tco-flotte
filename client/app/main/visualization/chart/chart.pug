.chart.card(id="{{ :: $ctrl.chart.meta.name }}", ng-class="{ 'chart--rendered': $ctrl.rendered }")
  h3.chart__heading.card-block(sticky="")
    | {{ $ctrl.chart.meta.name | translate }}
  .chart__c3.chart__c3--static(ng-if="$ctrl.static")
    img(ng-src="/api/fleets/png/{{ $ctrl.meta.name }}")
  .chart__c3(ng-if="!$ctrl.static")
    c3chart(bindto-id="chart-{{ :: $ctrl.meta.name }}", transition-duration="0")
      chart-column(column-id="x",
                   column-values="{{ :: $ctrl.columnNames() }}")
      chart-column(ng-repeat="group in $ctrl.chart.groups",
                   column-id="{{ :: group.id }}",
                   column-name="{{ :: group.label }}",
                   column-values="{{ :: group.values }}",
                   column-type="bar")
      chart-bar(ratio="0.8")
      selection(enabled="false")
      chart-group(group-values="{{ :: $ctrl.chart.groupsIds().join(',') }}")
      chart-legend(show-legend="true")
      chart-colors(color-function="$ctrl.colors($ctrl.chart)")
      chart-tooltip(show-tooltip="false")
      chart-grid(show-y="true")
      chart-axes(values-x="x")
      chart-events(on-rendered="$ctrl.rendered = true")
      chart-axis
        chart-axis-x-tick(tick-outer="false")
        chart-axis-x(axis-position="outer-center",
                     axis-type="category")
