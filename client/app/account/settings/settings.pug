.container.account__settings
  .card-block.card
    .card-title
      h1 Change Password
    .card-text
      form.form(name='form', ng-submit='vm.changePassword(form)', novalidate='')
        .form-group
          label Current Password
          input.form-control(type='password', name='password', ng-model='vm.user.oldPassword', mongoose-error='')
          p.help-block.text-danger(ng-show='form.password.$error.mongoose')
            | {{ vm.errors.other }}
        .form-group
          label New Password
          input.form-control(type='password', name='newPassword', ng-model='vm.user.newPassword', ng-minlength='3', required='')
          p.help-block.text-danger(ng-show='(form.newPassword.$error.minlength || form.newPassword.$error.required) && (form.newPassword.$dirty || vm.submitted)')
            | Password must be at least 3 characters.
        .form-group
          label Confirm New Password
          input.form-control(type='password', name='confirmPassword', ng-model='vm.user.confirmPassword', match='vm.user.newPassword', ng-minlength='3', required='')
          p.help-block.text-danger(ng-show='form.confirmPassword.$error.match && vm.submitted')
            | Passwords must match.
          p.help-block.text-danger  {{ vm.message }}
          button.btn.btn-lg.btn-primary(type='submit') Save changes
